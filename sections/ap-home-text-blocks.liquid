<div class="container-fluid">
  <div class="container">
    {% assign count = 1 %}
    {% for block in section.blocks %}
    {% assign evens = count | modulo: 2 %}
    <div class="row pT-60 {% if evens == 0 %}flex-row flex-md-row-reverse flex-lg-row-reverse {% endif %}">
      <div class="col-md-6 wfm-esnt-sect">
        <img src="{{ block.settings.img_sct | img_url: '', crop: 'center' }}" class="ap-client-logo">
      </div>
      <div class="col-md-6 blnkt-hdie-hdng-2">
        <h2 class="py-2">{{block.settings.sct_hdng}}</h2>
        <p>{{block.settings.sct_cnt}}</p>
      </div>
    </div>
    {% assign count = count | plus: 1 %}
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Text Section",
	"max_blocks": 3,
    "settings": [

	],
	"blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "img_sct",
          "label": "upload Image"
        },
		{
          "type": "text",
          "id": "sct_hdng",
          "label": "Heading"
        },
		{
          "type": "textarea",
          "id": "sct_cnt",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Text Section",
    "category": "Custom Sections"
  }]
  }
{% endschema %}

